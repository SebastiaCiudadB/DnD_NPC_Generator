<Window x:Class="WpfApp_RandomNPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_RandomNPC"
        mc:Ignorable="d"
        Title="Generador de NPCs" Height="675" Width="1200" Icon="/IMG_WindowLogo.png" ResizeMode="NoResize">
    <Grid x:Name="Fondo" Background="#FF8EBDB6">
        <!--===========================================-->
        <!--Estructura de la ventana-->
        <!--===========================================-->
        <Rectangle x:Name="RectHeader" Height="100" VerticalAlignment="Top" Fill="#FF195E63"/>
        <Image x:Name="ImgLogo" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80" Source="/IMG_LogoDragon.png" Margin="10,10,0,0" SnapsToDevicePixels="True"/>
        <Rectangle x:Name="RectDisplay" HorizontalAlignment="Left" Margin="227,100,0,0" Width="973" Fill="#FF3E838C" Stroke="Black" StrokeThickness="2"/>

        <!--===========================================-->
        <!--Labels de informacion general-->
        <!--===========================================-->
        <TextBlock HorizontalAlignment="Left" Height="30" Margin="10,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"><Run Language="es-es" Text="OPCIONES"
            FontFamily="Segoe UI"
            FontWeight="Black"
            FontStyle="Italic"
            FontSize="24"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Height="87" Margin="0,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1200"><Run Language="es-es" Text="GENERADOR DE NPC'S"
            FontFamily="Segoe UI"
            FontWeight="Black"
            FontStyle="Italic"
            FontSize="64"
            Foreground="LightGray"/></TextBlock>

        <!--===========================================-->
        <!--Seleccionar quantos NPCs quieres-->
        <!--===========================================-->

        <TextBlock HorizontalAlignment="Left" Height="22" Margin="10,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"><Run Language="es-es" Text="Cuantos NPCs quieres?"
            FontFamily="Segoe UI"
            FontWeight="Black"
            FontStyle="Italic"
            FontSize="12"/></TextBlock>

        <!--Checkbox si quieres solo 1 NPC-->
        <CheckBox x:Name="ChB_SingleNPC" Content="CheckBox" Checked="ChB_SingleNPC_Checked"  HorizontalAlignment="Left" Height="20" Margin="15,193,0,0" VerticalAlignment="Top" Width="19" IsChecked="False">
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
            </CheckBox.RenderTransform>
        </CheckBox>
        <!--Checkbox si quieres varios NPCs-->
        <CheckBox x:Name="ChB_SomeNPC" Content="CheckBox" Checked="ChB_SomeNPC_Checked" HorizontalAlignment="Left" Height="20" Margin="49,193,0,0" VerticalAlignment="Top" Width="16">
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
            </CheckBox.RenderTransform>
        </CheckBox>

        <!--Labels para señalar que hace cada Chackbox-->
        <Label Content="1" HorizontalAlignment="Left" Height="31" Margin="17,168,0,0" VerticalAlignment="Top" Width="20"/>
        <Label Content="nº" HorizontalAlignment="Left" Height="31" Margin="52,168,0,0" VerticalAlignment="Top" Width="29"/>

        <!--Lista para seleccionar el numero de NPCs que deseas-->
        <!--Solo esta activa si seleccionas la Checkbox de varios NPCs-->
        <ComboBox x:Name="LstSomeNPC" HorizontalAlignment="Left" Height="20" Margin="80,195,0,0" VerticalAlignment="Top" Width="75">
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
        </ComboBox>

        <!--===========================================-->
        <!--Seleccionar que razas quieres para los NPCs-->
        <!--===========================================-->

        <Label Content="Selecciona las razas que quieres" HorizontalAlignment="Left" Margin="10,238,0,0" VerticalAlignment="Top" Width="217"
            FontFamily="Segoe UI"
            FontWeight="Black"
            FontStyle="Italic"
            FontSize="12"/>
        <Button x:Name="BotonSeleccionaRazas" Content="Seleccionar Razas" HorizontalAlignment="Left" Margin="10,269,0,0" VerticalAlignment="Top" Width="167" 
                Click="BtSeleccionarRazas" BorderThickness="1,1,1,1" ClipToBounds="True"/>
        <Button x:Name="BtGenerarNpc" Content="Generar NPCs" HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" Width="165" 
                Click="BtGenerarNpc_Click" Height="50"/>
        <Button Content="Guardar documento" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Width="165"/>

        <!--===========================================-->
        <!--Mostrar informacion de los NPCs-->
        <!--===========================================-->

        <!--Imagen de la raza-->
        <Image x:Name="ImgRaza" HorizontalAlignment="Left" Height="94" Margin="247,114,0,0" VerticalAlignment="Top" Width="96" Source="/IMG_TokenHumano.png"/>
        <!--Raza-->
        <Label x:Name="LabelNombreRaza" Content="RAZA:" HorizontalAlignment="Left" Height="32" Margin="380,127,0,0" VerticalAlignment="Top" Width="98" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelRaza" Content="" HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Height="32" Width="250" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Criatura-->
        <Label x:Name="LabelNombreCriatura" Content="CRIATURA:" HorizontalAlignment="Left" Height="32" Margin="755,127,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelCriatura" Content="" HorizontalAlignment="Left" Margin="867,127,0,0" VerticalAlignment="Top" Height="32" Width="250" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Edad-->
        <Label Content="EDAD:" HorizontalAlignment="Left" Height="32" Margin="380,173,0,0" VerticalAlignment="Top" Width="98" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelEdad" Content="" HorizontalAlignment="Left" Margin="475,173,0,0" VerticalAlignment="Top" Height="32" Width="84" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Altura-->
        <Label Content="ALTURA:" HorizontalAlignment="Left" Height="32" Margin="621,173,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelAltura" Content="" HorizontalAlignment="Left" Margin="721,173,0,0" VerticalAlignment="Top" Height="32" Width="84" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Piel-->
        <Label Content="PIEL:" HorizontalAlignment="Left" Height="32" Margin="240,240,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelColorPiel" Content="" HorizontalAlignment="Left" Margin="310,240,0,0" VerticalAlignment="Top" Height="32" Width="225" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Pelo-->
        <Label Content="PELO:" HorizontalAlignment="Left" Height="32" Margin="240,290,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelColorPelo" Content="" HorizontalAlignment="Left" Margin="310,290,0,0" VerticalAlignment="Top" Height="32" Width="225" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Ojos-->
        <Label Content="OJOS:" HorizontalAlignment="Left" Height="32" Margin="240,340,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelColorOjos" Content="" HorizontalAlignment="Left" Margin="310,340,0,0" VerticalAlignment="Top" Height="32" Width="225" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Constitucion-->
        <Label Content="CONST:" HorizontalAlignment="Left" Height="32" Margin="240,390,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelConstitucion" Content="" HorizontalAlignment="Left" Margin="310,390,0,0" VerticalAlignment="Top" Height="32" Width="225" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Sexualidad-->
        <Label Content="SEXUALIDAD:" HorizontalAlignment="Left" Height="32" Margin="560,240,0,0" VerticalAlignment="Top" Width="126" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelSexualidad" Content="" HorizontalAlignment="Left" Margin="680,240,0,0" VerticalAlignment="Top" Height="32" Width="170" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Tamaño-->
        <Label Content="TAMAÑO:" HorizontalAlignment="Left" Height="32" Margin="880,290,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelTamaño" Content="" HorizontalAlignment="Left" Margin="1000,290,0,0" VerticalAlignment="Top" Height="32" Width="170" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Genero-->
        <Label Content="GENERO:" HorizontalAlignment="Left" Height="32" Margin="560,290,0,0" VerticalAlignment="Top" Width="128" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelGenero" Content="" HorizontalAlignment="Left" Margin="680,290,0,0" VerticalAlignment="Top" Height="32" Width="170" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Alineacion-->
        <Label Content="ALINEACION:" HorizontalAlignment="Left" Height="32" Margin="880,240,0,0" VerticalAlignment="Top" Width="127" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelAlineacion" Content="" HorizontalAlignment="Left" Margin="1000,240,0,0" VerticalAlignment="Top" Height="32" Width="170" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Lenguajes-->
        <Label Content="LENGUAJES:" HorizontalAlignment="Left" Height="32" Margin="560,340,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelLenguajes" Content="" HorizontalAlignment="Left" Margin="560,370,0,0" VerticalAlignment="Top" Height="84" Width="287" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6" RenderTransformOrigin="0.057,0.147"/>
        <!--Habilidades-->
        <Label Content="HABILIDAD:" HorizontalAlignment="Left" Height="32" Margin="240,440,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelHabilidades" Content="" HorizontalAlignment="Left" Margin="240,470,0,0" VerticalAlignment="Top" Height="100" Width="933" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>
        <!--Rasgos Especiales-->
        <Label Content="RASGO ESPECIAL:" HorizontalAlignment="Left" Height="32" Margin="880,340,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="LabelRasgoEsp" Content="" HorizontalAlignment="Left" Margin="880,370,0,0" VerticalAlignment="Top" Height="84" Width="293" BorderBrush="Black" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Background="#FF8EBDB6"/>

        <!--===========================================-->
        <!--Flexas para cambiar de NPC-->
        <!--===========================================-->
        <Image x:Name="FlexaAdelante" HorizontalAlignment="Left" Height="42" Margin="714,590,0,0" VerticalAlignment="Top" Width="100" 
               Source="/IMG_FlexaAdelante.png" 
               Opacity="0.2"
               MouseLeftButtonUp="NextNPC"/>
        <Image x:Name="FlexaAtras" HorizontalAlignment="Left" Height="42" Margin="610,590,0,0" VerticalAlignment="Top" Width="100" 
               Source="/IMG_FlexaAtras.png" 
               Opacity="0.2"
               MouseLeftButtonUp="PreviousNPC"/>


    </Grid>
</Window>
